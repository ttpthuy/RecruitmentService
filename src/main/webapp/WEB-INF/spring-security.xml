	<beans:bean id="myBasicAuthenticationEntryPoint"
		class="com.cdweb.authentication.MyBasicAuthenticationEntryPoint"></beans:bean>


	<http use-expressions="true">
		<intercept-url pattern="/" access="isAuthenticated()" />
		<intercept-url pattern="/vacancys" access="hasRole('ROLE_HR')" />
		<intercept-url pattern="/addVacancy"
			access="permitAll()" />



		<!-- <form-login login-page="/login" login-processing-url="/j_spring_security_login" 
