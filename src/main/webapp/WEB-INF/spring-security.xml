			username-parameter="username" password-parameter="password" /> <logout logout-url="/j_spring_security_logout" 
			logout-success-url="/login?message=logout" delete-cookies="JSESSIONID" /> -->
		<http-basic
			entry-point-ref="myBasicAuthenticationEntryPoint" />
		<cors />
		<csrf disabled="true" />
		<headers>
        <header name="X-Custom-Security-Header" value="header-value"/>
    </headers>
	</http>
	 

	<beans:bean id="customAuthenticationProvider"
		class="com.cdweb.authentication.CustomAuthenticationProvider"></beans:bean>
	<!-- <beans:bean id="myUserDetailsService" class="com.cdweb.service.MyUserDetailsService"></beans:bean> -->
	<authentication-manager alias="authenticationManager">
		<authentication-provider
			ref="customAuthenticationProvider">
			<!-- <password-encoder hash="bcrypt"/> -->
		</authentication-provider>
	</authentication-manager>
